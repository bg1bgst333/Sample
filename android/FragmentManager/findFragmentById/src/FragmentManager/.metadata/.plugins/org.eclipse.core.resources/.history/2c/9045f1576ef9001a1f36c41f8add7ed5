package com.bgstation0.android.sample.fragmentmanager_;

import android.app.Activity;
import android.app.FragmentManager;
import android.app.FragmentTransaction;
import android.os.Bundle;
import android.view.Menu;
import android.view.MenuItem;

public class MainActivity extends Activity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        
        // ƒtƒ‰ƒOƒƒ“ƒg‚Ì’Ç‰Á.
        FragmentManager fragmentManager = getFragmentManager();	// fragmentManager‚Ìæ“¾.
        FragmentTransaction fragmentTransaction = fragmentManager.beginTransaction();	// fragmentTransaction‚Ìæ“¾.
        Fragment1 fragment1 = new Fragment1();	// fragment1‚Ì¶¬.
        fragmentTransaction.add(R.id.framelayout1, fragment1);	// fragment1‚ğ’Ç‰Á.
        Fragment2 fragment2 = new Fragment2();	// fragment2‚Ì¶¬.
        
    }
}
